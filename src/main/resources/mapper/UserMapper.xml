<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.onlinebook.dao.mapper.UserMapper">
  <resultMap id="BaseResultMap" type="com.study.onlinebook.dao.entity.User">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="uid" jdbcType="BIGINT" property="uid" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="salt" jdbcType="VARCHAR" property="salt" />
  </resultMap>
  <resultMap id="UserVo" type="com.study.onlinebook.dao.entity.UserVo">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="uid" jdbcType="BIGINT" property="uid" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="salt" jdbcType="VARCHAR" property="salt" />
    <association property="userinfo" javaType="com.study.onlinebook.dao.entity.Userinfo">
      <result column="uid" jdbcType="BIGINT" property="uid"/>
      <result column="actualname" jdbcType="VARCHAR" property="actualname"/>
      <result column="sex" jdbcType="VARCHAR" property="sex"/>
      <result column="creationtime" jdbcType="TIMESTAMP" property="creationtime"/>
      <result column="tel" jdbcType="VARCHAR" property="tel"/>
      <result column="email" jdbcType="VARCHAR" property="email"/>
      <result column="selfintroduction" jdbcType="VARCHAR" property="selfintroduction"/>
    </association>

  </resultMap>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from user
    where id = #{id,jdbcType=INTEGER}
  </delete>
  <insert id="insert" parameterType="com.study.onlinebook.dao.entity.User">
    <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
      SELECT LAST_INSERT_ID()
    </selectKey>
    insert into user (`uid`, `name`, `password`,
    salt)
    values (#{uid,jdbcType=BIGINT}, #{name,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR},
    #{salt,jdbcType=VARCHAR})
  </insert>
  <update id="updateByPrimaryKey" parameterType="com.study.onlinebook.dao.entity.User">
    update user
    set `uid` = #{uid,jdbcType=BIGINT},
      `name` = #{name,jdbcType=VARCHAR},
      `password` = #{password,jdbcType=VARCHAR},
      salt = #{salt,jdbcType=VARCHAR}
    where id = #{id,jdbcType=INTEGER}
  </update>
  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select id, `uid`, `name`, `password`, salt
    from user
    where id = #{id,jdbcType=INTEGER}
  </select>
  <select id="selectAll" resultMap="BaseResultMap">
    select id, `uid`, `name`, `password`, salt
    from user
  </select>
  <select id="countByName" resultType="java.lang.Integer">
    SELECT COUNT(1)
    FROM user
    where name=#{name}
  </select>
  <select id="count" resultType="java.lang.Integer">
    SELECT COUNT(1)
    FROM user
  </select>
  <select id="findUserByName" resultMap="BaseResultMap">
   select id, `uid`, `name`, `password`, salt
    from user
    where  name=#{name}
  </select>
    <select id="selectAllUserVo" resultMap="UserVo">
      select *
      from
      user left join userinfo on user.uid=userinfo.uid
    </select>
  <delete id="deleteByUid">
     delete from user
    where uid = #{uid,jdbcType=INTEGER}
  </delete>
  <update id="updateNameByUid" parameterType="com.study.onlinebook.dao.entity.User">
    update user
    <set>
      <if test="name!=null and name!=''">name=#{name}</if>
    </set>
    where uid=#{uid}
  </update>

</mapper>